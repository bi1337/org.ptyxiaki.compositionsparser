<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.ptyxiaki.compositionsparser.commands.parseworkspace"
            name="%command.name">
      </command>
      <command
      		id="org.ptyxiaki.compositionsparser.commands.export"
      		name="%command.name.0">
      </command>
      <command
      		id="org.ptyxiaki.compositionsparser.commands.findExtremes"
      		name="%command.name.1">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.ptyxiaki.compositionsparser.handlers.ParseHandler"
            commandId="org.ptyxiaki.compositionsparser.commands.parseworkspace">
      </handler>
      <handler
            class="org.ptyxiaki.compositionsparser.handlers.ExportHandler"
            commandId="org.ptyxiaki.compositionsparser.commands.export">
      </handler>
      <handler
      		class="org.ptyxiaki.compositionsparser.handlers.ExtremesHandler"
      		commandId="org.ptyxiaki.compositionsparser.commands.findExtremes">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="%menu.label"
               mnemonic="%menu.mnemonic"
               id="org.ptyxiaki.myooparser.menus.Compositions">
            <command
                  commandId="org.ptyxiaki.compositionsparser.commands.parseworkspace"
                  id="org.ptyxiaki.compositionsparser.parseworkspace"
                  label="%command.label"
                  style="push">
            </command>
             <command
                  commandId="org.ptyxiaki.compositionsparser.commands.export"
                  id="org.ptyxiaki.compositionsparser.export"
                  label="%command.label.0"
                  style="push">
            </command>
            <command
            	  commandId="org.ptyxiaki.compositionsparser.commands.findExtremes"
            	  id="org.ptyxiaki.compositionsparser.findExtremes"
            	  label="%command.label.1"
            	  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
